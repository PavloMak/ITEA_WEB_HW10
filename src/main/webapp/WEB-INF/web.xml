<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>Registration</servlet-name>
        <servlet-class>com.komsoft.shopmvc.controller.RegistrationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Authorization</servlet-name>
        <servlet-class>com.komsoft.shopmvc.controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductController</servlet-name>
        <servlet-class>com.komsoft.shopmvc.controller.ProductController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SingleProductController</servlet-name>
        <servlet-class>com.komsoft.shopmvc.controller.SingleProductController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartController</servlet-name>
        <servlet-class>com.komsoft.shopmvc.controller.CartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MainPageController</servlet-name>
        <servlet-class>com.komsoft.shopmvc.controller.MainPageController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Authorization</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductController</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SingleProductController</servlet-name>
        <url-pattern>/product</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartController</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MainPageController</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

</web-app>